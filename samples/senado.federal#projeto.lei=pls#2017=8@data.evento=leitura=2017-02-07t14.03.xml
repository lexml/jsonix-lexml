            <Rotulo>IV –</Rotulo>
            
            <Omissis id="art4_cpt_alt1_art17_cpt_inc4_omi1"/><Alinea xlink:href="art17_cpt_inc4_ali3" id="art4_cpt_alt1_art17_cpt_inc4_ali3">
            
            
