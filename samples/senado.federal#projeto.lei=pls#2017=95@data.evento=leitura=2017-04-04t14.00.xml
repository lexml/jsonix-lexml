              <Artigo xlink:href="art1" id="art3_cpt_alt1_art1" abreAspas="s">
            
            
            <Rotulo>Art. 1º</Rotulo>
            
            <Caput xlink:href="art1_cpt" id="art3_cpt_alt1_art1_cpt" textoOmitido="s">
            
            
            
            
            <Omissis id="art3_cpt_alt1_art1_cpt_omi1"/><Inciso xlink:href="art1_cpt_inc10" id="art3_cpt_alt1_art1_cpt_inc10" fechaAspas="s" notaAlteracao="NR">
            
            
            <Rotulo>X –</Rotulo>
            <p>das ações em órgãos e entidades dedicados à ciência, à tecnologia, à inovação e à criatividade.</p>
            
          </Inciso>
          </Caput>
          </Artigo>
            </Alteracao>
          </Caput>
          </Artigo><Artigo id="art4">
            
            
            <Rotulo>Art. 4º</Rotulo>
            
            <Caput id="art4_cpt">
            
            
            
            <p>Esta Lei entra em vigor na data de sua publicação.</p>
            
          </Caput>
          </Artigo></Articulacao>
